<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskFragment">


    <TextView
        android:id="@+id/fragment_title_text"
        android:layout_width="130dp"
        android:layout_height="28dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="220dp"
        android:text="Title"
        app:layout_constraintBottom_toTopOf="@+id/fragment_body_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027" />

    <TextView
        android:id="@+id/fragment_body_text"
        android:layout_width="290dp"
        android:layout_height="89dp"
        android:text="Body"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="285dp" />

    <TextView
        android:id="@+id/fragment_state_text"
        android:layout_width="74dp"
        android:layout_height="29dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="State"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_body_text"
        app:layout_constraintVertical_bias="0.037" />
</androidx.constraintlayout.widget.ConstraintLayout>